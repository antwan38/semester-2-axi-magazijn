
@{
    ViewData["Title"] = "Producten beheren";
}
@model List<ASPPresentationLayer.Models.ProductViewModel>

<partial name="_Message" model="@ViewBag.Info" />

@if (Model.Count > 0)
{

    <form method="post" asp-controller="Product">
        <div class="bigList">
            <partial id="partialview" name="_ProductList" model="@Model">

                <div>
                    <input type="submit" value="Geselecteerde verwijderen" asp-action="Delete" class="btn btn-primary navBtn smallBtn" />

                    <input type="submit" value="Geselecteerde bewerken" asp-action="Edit" class="btn btn-primary navBtn smallBtn" />

                    <a asp-controller="Product" asp-action="SelectBranch">
                        <input type="button" class="btn btn-primary navBtn" value="Nieuw toevoegen..." />
                    </a>
                </div>
        </div>
    </form>
}
else
{
    <label style="font-style:italic">Er zijn geen producten gevonden...</label>
}