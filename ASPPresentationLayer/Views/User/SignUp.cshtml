@model Presentation.Models.AccountModel

@{
    ViewData["Title"] = "Gebruiker registreren";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
<div class="fields">
    <form asp-action="SignUp">
        <div class="form-group">
            <div class="label" asp-for="Mail">Email-adres</div>
            <input asp-for="Mail" type="email" placeholder="voorbeeld@email.nl" />
        </div>
        <br />
        <div class="form-group">
            <div class="label" asp-for="Mail">Naam</div>
            <input asp-for="UserName" type="text" />
        </div>
        <br />
        <div class="form-group">
            <div class="label" asp-for="Password">Wachtwoord</div>
            <input asp-for="Password" type="password" />
        </div>
        <br />
        <div class="form-group">
            <div class="label" asp-for="Password">Type</div>
            <select class="form-control" asp-for="Role">
                <option value="0">Medewerker</option>
                <option value="1">Administrator</option>
            </select>
        </div>
        <br />
        <input type="submit" value="Registreer" class="btn btn-primary d-block w-100 submitBtn" />

    </form>
    <div class="Error">
        @Html.ValidationMessageFor(m => m.Mail)
        @Html.ValidationMessageFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.UserName) 
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
    </div>
</div>